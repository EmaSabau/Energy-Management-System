{
  "info": {
    "name": "Auth Service API",
    "_postman_id": "auth-service-demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8082" },
    { "key": "resource", "value": "auths" },
    { "key": "authId", "value": "" }
  ],
  "item": [
    {
      "name": "GET – List auths (200)",
      "request": {
        "method": "GET",
        "header": [{"key": "Accept", "value": "application/json"}],
        "url": { "raw": "{{baseUrl}}/{{resource}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}"] }
      }
    },
    {
      "name": "POST – Create auth (201) [valid]",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/{{resource}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Created', () => pm.response.to.have.status(201));",
              "let id = null;",
              "const loc = pm.response.headers.get('Location');",
              "if (loc) id = loc.split('/').slice(-1)[0];",
              "else {",
              "  try { const body = pm.response.json(); if (body && body.id) id = body.id; } catch(e) {}",
              "}",
              "pm.collectionVariables.set('authId', id);"
            ]
          }
        }
      ]
    },
    {
      "name": "GET – Get auth by ID (200)",
      "request": {
        "method": "GET",
        "header": [{"key": "Accept", "value": "application/json"}],
        "url": { "raw": "{{baseUrl}}/{{resource}}/{{authId}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}","{{authId}}"] }
      }
    },
    {
      "name": "PUT – Replace auth (204)",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{authId}}\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"newpass123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/{{resource}}/{{authId}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}","{{authId}}"] }
      }
    },
    {
      "name": "PATCH – Partial update (204)",
      "request": {
        "method": "PATCH",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": { "mode": "raw", "raw": "{ \"password\": \"patchedpass\" }" },
        "url": { "raw": "{{baseUrl}}/{{resource}}/{{authId}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}","{{authId}}"] }
      }
    },
    {
      "name": "DELETE – Remove auth (204)",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/{{resource}}/{{authId}}", "host": ["{{baseUrl}}"], "path": ["{{resource}}","{{authId}}"] }
      }
    },
    {
      "name": "GET – Invalid UUID (400)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/{{resource}}/not-a-uuid", "host": ["{{baseUrl}}"], "path": ["{{resource}}","not-a-uuid"] }
      }
    }
  ]
}
